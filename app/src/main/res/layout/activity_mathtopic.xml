                android:text="@string/relations_amp_functions"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/choco"
                 
                app:backgroundTint="#D6D6D6" />

            <Button
                android:id="@+id/itf"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:drawableLeft="@drawable/itf"
                android:fontFamily="@font/choco"
                android:text="@string/inverse_trigonometric_functions"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                 
                app:backgroundTint="#D6D6D6" />

            <Button
                android:id="@+id/limit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:drawableLeft="@drawable/lim"
                android:text="@string/limits_continuity_amp_differentiability"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/choco"
                 
                app:backgroundTint="#D6D6D6" />

            <Button
                android:id="@+id/aod"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:drawableLeft="@drawable/aod"
                android:text="@string/applications_of_derivatives"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/choco"
                 
                app:backgroundTint="#D6D6D6" />

            <Button
                android:id="@+id/indef"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
