<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical"
    tools:context=".mathtopic">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/trigo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:drawableLeft="@drawable/trigo"
                android:fontFamily="@font/choco"
                android:text="@string/trigonometry"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                 
                app:backgroundTint="#D6D6D6" />

            <Button
                android:id="@+id/matrix"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:drawableLeft="@drawable/mat"
                android:fontFamily="@font/choco"
                android:text="@string/matrices_amp_determinants"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                 
                app:backgroundTint="#D6D6D6" />

            <Button
                android:id="@+id/quad"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:drawableLeft="@drawable/quad"
                android:fontFamily="@font/choco"
                android:text="@string/quadratic_equations"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                 
                app:backgroundTint="#D6D6D6" />

            <Button
                android:id="@+id/series"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:drawableLeft="@drawable/series"
                android:text="@string/sequences_amp_series"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/choco"
                 
                app:backgroundTint="#D6D6D6" />

            <Button
                android:id="@+id/func"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
