<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PRACTICE">

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:background="@drawable/title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_marginStart="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="22sp"
            android:fontFamily="@font/choco"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="TextView" />

        <ImageView
            android:id="@+id/alerttt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            app:srcCompat="@drawable/alert"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:fontFamily="@font/choco"
            android:textStyle="bold"
            android:text="Practice Paper" />
    </LinearLayout>

    <TextView
        android:id="@+id/textalert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay1"
        android:background="#CEEDEA"
        android:text="** Click back button twice to EXIT the PRACTICE PAPER."
        android:textColor="#FF4141"
        android:textSize="12dp" />

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textalert"

        />

</RelativeLayout>